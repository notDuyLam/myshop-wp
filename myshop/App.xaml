<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="myshop.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:myshop">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Theme Colors -->
            <SolidColorBrush x:Key="AppBackgroundBrush" Color="#F3F3F3"/>
            <SolidColorBrush x:Key="AppForegroundBrush" Color="#000000"/>
            
            <!-- Light Theme Colors -->
            <SolidColorBrush x:Key="LightBackgroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="LightForegroundBrush" Color="#000000"/>
            <SolidColorBrush x:Key="LightBorderBrush" Color="#CCCCCC"/>
            
            <!-- Dark Theme Colors -->
            <SolidColorBrush x:Key="DarkBackgroundBrush" Color="#1F1F1F"/>
            <SolidColorBrush x:Key="DarkForegroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="DarkBorderBrush" Color="#404040"/>
            
            <!-- Accent Colors -->
            <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
            <SolidColorBrush x:Key="AccentHoverBrush" Color="#106EBE"/>
            
            <!-- Other app resources here -->
        </ResourceDictionary>
    </Application.Resources>
</Application>
