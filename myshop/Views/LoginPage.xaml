<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="myshop.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:myshop.Helpers"
    mc:Ignorable="d">
    
    <Page.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <helpers:BoolNegationConverter x:Key="BoolNegationConverter"/>
        <helpers:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left side: Logo and App Name -->
        <Grid Grid.Column="0" Background="{ThemeResource AccentBrush}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="MyShop" 
                          FontSize="48" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Quản lý cửa hàng" 
                          FontSize="24" 
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Right side: Login Form -->
        <Grid Grid.Column="1" Padding="40">
            <StackPanel VerticalAlignment="Center" Spacing="20">
                <TextBlock Text="Đăng nhập" 
                          FontSize="32" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center"/>
                
                <TextBox x:Name="UsernameTextBox" 
                        Header="Tên đăng nhập" 
                        PlaceholderText="Nhập tên đăng nhập"
                        Text="{x:Bind ViewModel.Username, Mode=TwoWay}"
                        IsEnabled="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"/>
                
                <PasswordBox x:Name="PasswordBox" 
                            Header="Mật khẩu" 
                            PlaceholderText="Nhập mật khẩu"
                            PasswordChanged="PasswordBox_PasswordChanged"
                            IsEnabled="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"/>
                
                <!-- Error Message -->
                <TextBlock Text="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                          Foreground="Red"
                          TextWrapping="Wrap"
                          Visibility="{x:Bind ViewModel.ErrorMessage, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}"/>
                
                <!-- Loading Indicator -->
                <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                            Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                            HorizontalAlignment="Center"/>
                
                <Button Content="Đăng nhập" 
                       Command="{x:Bind ViewModel.LoginCommand}"
                       IsEnabled="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"
                       HorizontalAlignment="Stretch"/>
                
                <HyperlinkButton Content="Cấu hình server" 
                               Command="{x:Bind ViewModel.NavigateToConfigCommand}"
                               HorizontalAlignment="Center"/>
                
                <TextBlock x:Name="VersionTextBlock" 
                          Text="Version 1.0.0" 
                          FontSize="12" 
                          Foreground="Gray"
                          HorizontalAlignment="Center"
                          Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

