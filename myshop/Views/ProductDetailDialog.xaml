<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="myshop.Views.ProductDetailDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Chi tiết sản phẩm"
    PrimaryButtonText="Lưu"
  CloseButtonText="Hủy"
    DefaultButton="Primary"
    Style="{StaticResource DefaultContentDialogStyle}">

    <ScrollViewer MaxHeight="700">
     <StackPanel Spacing="16" Padding="4">
    <!-- Product Information Section -->
   <TextBlock Text="Thông tin sản phẩm" 
      FontSize="18" 
       FontWeight="SemiBold"/>

       <!-- SKU -->
      <StackPanel>
          <TextBlock Text="SKU *" 
        FontWeight="SemiBold"
         Margin="0,0,0,8"/>
      <TextBox x:Name="SkuTextBox"
   PlaceholderText="Nhập mã SKU"
            MaxLength="50"/>
   </StackPanel>

     <!-- Product Name -->
     <StackPanel>
   <TextBlock Text="Tên sản phẩm *" 
        FontWeight="SemiBold"
         Margin="0,0,0,8"/>
   <TextBox x:Name="ProductNameTextBox"
   PlaceholderText="Nhập tên sản phẩm"
  MaxLength="200"/>
            </StackPanel>

  <!-- Category -->
            <StackPanel>
     <TextBlock Text="Danh mục *" 
       FontWeight="SemiBold"
 Margin="0,0,0,8"/>
          <ComboBox x:Name="CategoryComboBox"
        HorizontalAlignment="Stretch"
         PlaceholderText="Chọn danh mục">
  <ComboBoxItem Content="Điện tử"/>
           <ComboBoxItem Content="Thời trang"/>
     <ComboBoxItem Content="Gia dụng"/>
          <ComboBoxItem Content="Thực phẩm"/>
       </ComboBox>
            </StackPanel>

       <!-- Price and Stock in Grid -->
            <Grid>
   <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
   <ColumnDefinition Width="16"/>
     <ColumnDefinition Width="*"/>
     </Grid.ColumnDefinitions>

         <!-- Import Price -->
       <StackPanel Grid.Column="0">
     <TextBlock Text="Giá nhập *" 
 FontWeight="SemiBold"
 Margin="0,0,0,8"/>
       <NumberBox x:Name="ImportPriceBox"
        PlaceholderText="0"
 SpinButtonPlacementMode="Compact"
   Minimum="0"/>
        </StackPanel>

     <!-- Stock Count -->
       <StackPanel Grid.Column="2">
     <TextBlock Text="Tồn kho *" 
    FontWeight="SemiBold"
          Margin="0,0,0,8"/>
 <NumberBox x:Name="StockCountBox"
       PlaceholderText="0"
       SpinButtonPlacementMode="Compact"
      Minimum="0"/>
    </StackPanel>
   </Grid>

            <!-- Description -->
   <StackPanel>
     <TextBlock Text="Mô tả" 
        FontWeight="SemiBold"
  Margin="0,0,0,8"/>
 <TextBox x:Name="DescriptionTextBox"
       PlaceholderText="Nhập mô tả sản phẩm"
 TextWrapping="Wrap"
   AcceptsReturn="True"
        Height="100"
     MaxLength="1000"/>
       </StackPanel>

   <!-- Image Gallery Section -->
       <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
   CornerRadius="8"
       Padding="16"
    Margin="0,8,0,0">
     <StackPanel Spacing="12">
        <TextBlock Text="Hình ảnh sản phẩm" 
   FontSize="18" 
   FontWeight="SemiBold"/>
  
   <TextBlock Text="Tối thiểu 3 hình ảnh" 
        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
           FontSize="12"/>

 <!-- Image Preview Grid -->
      <GridView x:Name="ImageGalleryView"
       SelectionMode="None"
IsItemClickEnabled="True"
 Height="280">
      <GridView.ItemContainerStyle>
      <Style TargetType="GridViewItem">
         <Setter Property="Margin" Value="0,0,8,8"/>
  </Style>
      </GridView.ItemContainerStyle>

  <!-- Image 1 -->
      <Border Width="120" 
   Height="120" 
      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
     BorderThickness="2"
       CornerRadius="8">
 <Grid>
      <Image x:Name="Image1"
        Stretch="UniformToFill"/>
   <StackPanel VerticalAlignment="Center"
       HorizontalAlignment="Center"
     x:Name="Image1Placeholder">
         <FontIcon Glyph="&#xEB9F;" 
   FontSize="32"
          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
      <TextBlock Text="Hình 1" 
          FontSize="12"
   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
       HorizontalAlignment="Center"/>
             </StackPanel>
   </Grid>
        </Border>

    <!-- Image 2 -->
  <Border Width="120" 
        Height="120" 
   Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
   BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
    BorderThickness="2"
       CornerRadius="8">
  <Grid>
          <Image x:Name="Image2"
Stretch="UniformToFill"/>
           <StackPanel VerticalAlignment="Center"
     HorizontalAlignment="Center"
          x:Name="Image2Placeholder">
   <FontIcon Glyph="&#xEB9F;" 
           FontSize="32"
     Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
           <TextBlock Text="Hình 2" 
    FontSize="12"
  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
     HorizontalAlignment="Center"/>
   </StackPanel>
</Grid>
         </Border>

          <!-- Image 3 -->
     <Border Width="120" 
       Height="120" 
 Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
 BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
 BorderThickness="2"
          CornerRadius="8">
 <Grid>
        <Image x:Name="Image3"
    Stretch="UniformToFill"/>
   <StackPanel VerticalAlignment="Center"
      HorizontalAlignment="Center"
        x:Name="Image3Placeholder">
      <FontIcon Glyph="&#xEB9F;" 
       FontSize="32"
 Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
      <TextBlock Text="Hình 3" 
        FontSize="12"
         Foreground="{ThemeResource TextFillColorSecondaryBrush}"
         HorizontalAlignment="Center"/>
  </StackPanel>
    </Grid>
      </Border>

<!-- Add More Images Button -->
   <Border Width="120" 
         Height="120" 
  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
     BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
      BorderThickness="2"
 CornerRadius="8"
 Padding="8">
      <Button HorizontalAlignment="Stretch"
   VerticalAlignment="Stretch"
       Background="Transparent"
      BorderThickness="0">
   <StackPanel VerticalAlignment="Center"
    HorizontalAlignment="Center"
           Spacing="4">
       <FontIcon Glyph="&#xE710;" 
        FontSize="24"
 Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
   <TextBlock Text="Thêm hình" 
       FontSize="12"
          Foreground="{ThemeResource AccentFillColorDefaultBrush}"
     HorizontalAlignment="Center"/>
     </StackPanel>
      </Button>
  </Border>
       </GridView>

      <!-- Upload Buttons -->
       <StackPanel Orientation="Horizontal" Spacing="8">
  <Button x:Name="UploadImagesButton"
       Style="{StaticResource AccentButtonStyle}">
         <StackPanel Orientation="Horizontal" Spacing="8">
        <FontIcon Glyph="&#xE8B7;"/>
        <TextBlock Text="Chọn từ máy tính"/>
   </StackPanel>
          </Button>
    <Button x:Name="ClearImagesButton">
        <StackPanel Orientation="Horizontal" Spacing="8">
      <FontIcon Glyph="&#xE74D;"/>
   <TextBlock Text="Xóa tất cả"/>
       </StackPanel>
        </Button>
            </StackPanel>
      </StackPanel>
     </Border>

       <!-- Required Fields Note -->
          <TextBlock Text="* Trường bắt buộc" 
      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
       FontSize="12"
              FontStyle="Italic"
       Margin="0,8,0,0"/>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>
