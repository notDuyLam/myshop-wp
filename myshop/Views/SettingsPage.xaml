<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="myshop.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="40" MaxWidth="600" Spacing="20">
            <TextBlock Text="Cài đặt" 
                      FontSize="32" 
                      FontWeight="Bold"/>
            
            <Button Content="Cấu hình Server" 
                   Click="ConfigServerButton_Click"
                   HorizontalAlignment="Stretch"/>
            
            <!-- Separator -->
            <Border Height="1" 
                   Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                   Margin="0,20,0,20"/>
            
            <TextBlock Text="Tài khoản" 
                      FontSize="20" 
                      FontWeight="SemiBold"
                      Margin="0,10,0,10"/>
            
            <Button Content="Đăng xuất" 
                   Click="LogoutButton_Click"
                   HorizontalAlignment="Stretch">
                <Button.Resources>
                    <SolidColorBrush x:Key="ButtonBackground" Color="#DC3545"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#C82333"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#BD2130"/>
                    <SolidColorBrush x:Key="ButtonForeground" Color="White"/>
                </Button.Resources>
            </Button>
            
            <TextBlock Text="Các cài đặt khác sẽ được implement trong tuần 5" 
                      Foreground="Gray"
                      Margin="0,20,0,0"/>
        </StackPanel>
    </ScrollViewer>
</Page>

