<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="myshop.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="40">
            <TextBlock Text="Dashboard" 
                      FontSize="32" 
                      FontWeight="Bold"/>
            
            <!-- Metrics Cards -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" 
                       Background="{ThemeResource SystemControlBackgroundAltHighBrush}" 
                       Padding="20" 
                       CornerRadius="8"
                       Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Tổng số sản phẩm" FontSize="14" Foreground="Gray"/>
                        <TextBlock x:Name="TotalProductsText" Text="0" FontSize="32" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="1" 
                       Background="{ThemeResource SystemControlBackgroundAltHighBrush}" 
                       Padding="20" 
                       CornerRadius="8"
                       Margin="5,0">
                    <StackPanel>
                        <TextBlock Text="Đơn hàng hôm nay" FontSize="14" Foreground="Gray"/>
                        <TextBlock x:Name="TodayOrdersText" Text="0" FontSize="32" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="2" 
                       Background="{ThemeResource SystemControlBackgroundAltHighBrush}" 
                       Padding="20" 
                       CornerRadius="8"
                       Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Doanh thu hôm nay" FontSize="14" Foreground="Gray"/>
                        <TextBlock x:Name="TodayRevenueText" Text="0" FontSize="32" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Placeholder for charts and lists -->
            <TextBlock Text="Các thành phần khác sẽ được thêm vào trong tuần 4" 
                      Foreground="Gray"
                      HorizontalAlignment="Center"
                      Margin="0,40,0,0"/>
        </StackPanel>
    </ScrollViewer>
</Page>

